<div class="container">


<p id="notice"><%= notice %></p>

<%= image_tag @restaurant.image.url(:large) %>


<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Telephone:</strong>
  <%= @restaurant.telephone %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @restaurant.user.first_name %> <%= @restaurant.user.last_name %>
</p>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) if @restaurant.user == current_user || current_user.admin? %> |
<%= link_to 'Back', restaurants_path %>



<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Cuisine</th>
      <th>Healthy</th>
      <th>Vegetarian</th>
      <th>Vegan</th>
      <th>Gluten free</th>
      <th>Takeaway</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>

        <td><%= image_tag meal.image.url(:thumb) %></td>
        <td><%= meal.title %></td>
        <td><%= meal.cuisine %></td>
        <td><%= rating_for meal, 'healthy', star: 5 %></td>
        <td><%= meal.vegetarian %></td>
        <td><%= meal.vegan %></td>
        <td><%= meal.gluten_free %></td>
        <td><%= meal.takeaway %></td>
        <td><%= meal.restaurant.name %></td>
        <td><%= link_to 'Show', restaurant_meal_path(meal.restaurant, meal) %></td>
        <td><%= link_to 'Edit', edit_restaurant_meal_path(meal.restaurant, meal) if @restaurant.user == current_user || current_user.admin? %></td>
        <td><%= link_to 'Destroy', restaurant_meal_path(meal.restaurant, meal), method: :delete, data: { confirm: 'Are you sure?' } if @restaurant.user == current_user || current_user.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_restaurant_meal_path(@restaurant) %>


</div>
