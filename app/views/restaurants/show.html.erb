  <div class="container">
    <div class="restaurant-header">
      <div class="row row-new">
        <div class="col s6">
          <div class="row center-align">
          <%= image_tag @restaurant.image.url(:large) %>
          <p id="notice"><%= notice %></p>
          </div>
          <div class="row">
            <div class="col s3">
              <strong>Name:</strong>
            </div>
            <div class="col s6">
              <%= @restaurant.name %>
            </div>
          </div>

          <div class="row">
            <div class="col s3">
              <strong>Address:</strong>
            </div>
            <div class="col s6">
              <%= @restaurant.address %>
            </div>
          </div>
          <div class="row">
            <div class="col s3">
              <strong>Telephone:</strong>
            </div>
            <div class="col s6">
              <%= @restaurant.telephone %>
            </div>
          </div>
          <div class="row">
            <div class="col s3">
              <strong>Owner:</strong>
            </div>
            <div class="col s6">
              <%= @restaurant.user.first_name %> <%= @restaurant.user.last_name %>
            </div>
          </div>
          <%= link_to 'Edit', edit_restaurant_path(@restaurant) if @restaurant.user == current_user || current_user.admin? %> |
          <%= link_to 'Back', restaurants_path %>
        </div>
        <div class="col s6">
          <div class="row center-align">
            <img src="https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=400x400&maptype=roadmap&markers=color:red%7Clabel:%7C<%= @restaurant.latitude %>,<%= @restaurant.longitude %>&key=<%= ENV['GOOGLE_API'] %>">
          </div>
        </div>
      </div>
    </div>


      <p id="notice"><%= notice %></p>
      <h1>Meals</h1>


      <div class="row">
        <% @meals.each do |meal| %>
        <div class="col s5 m3">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator">
              <%= image_tag meal.image.url(:large) %>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= truncate(meal.title, :length => 12) %><i class="material-icons right">more_vert</i></span>
              <p><%= link_to 'Meal Details', restaurant_meal_path(meal.restaurant, meal) %></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= meal.title %><i class="material-icons right">close</i></span>
              <%= rating_for meal, 'healthy', star: 5 %>
            </div>
          </div>
        </div>
        <% end %>
      </div>

      <table>
        <thead>
          <tr>
            <th>Photo</th>
            <th>Title</th>
            <th>Cuisine</th>
            <th>Healthy</th>
            <th>Vegetarian</th>
            <th>Vegan</th>
            <th>Gluten free</th>
            <th>Takeaway</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @meals.each do |meal| %>
          <tr>
            <td><%= image_tag meal.image.url(:thumb) %></td>
            <td><%= meal.title %></td>
            <td><%= meal.cuisine %></td>
            <td><%= rating_for meal, 'healthy', star: 5 %></td>
            <td><%= yes_no(meal.vegetarian) %></td>
            <td><%= yes_no(meal.vegan) %></td>
            <td><%= yes_no(meal.gluten_free) %></td>
            <td><%= yes_no(meal.takeaway) %></td>
            <td><%= link_to 'Show', restaurant_meal_path(meal.restaurant, meal) %></td>
            <td><%= link_to 'Edit', edit_restaurant_meal_path(meal.restaurant, meal) if @restaurant.user == current_user || current_user.admin? %></td>
            <td><%= link_to 'Destroy', restaurant_meal_path(meal.restaurant, meal), method: :delete, data: { confirm: 'Are you sure?' } if @restaurant.user == current_user || current_user.admin? %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Meal', new_restaurant_meal_path(@restaurant) %>

  </div>
