<div class="background-image-signup">
  <div class="container">
    <div class="row">
      <div class="blurred-back col s12 m12 l6 offset-l6 z-depth-5" style="padding-left: 50px; padding-right: 50px; padding-bottom: 30px">
        <h4>Join Foodocracy today.</h4>

       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <div class="row no-margin">
            <div class="field col s6 m6">
              <%= f.label :first_name, class:"search-label2" %>
              <%= f.text_field :first_name, autofocus: true %>
            </div>
            <div class="field col s6 m6">
              <%= f.label :last_name, class:"search-label" %>
              <%= f.text_field :last_name, autofocus: true %>
            </div>
          </div>

          <div class="row no-margin">
            <div class="field">
              <%= f.label :birthday, class:"search-label" %> <br />
              <%= f.date_field :birthday, autofocus: true %>
            </div>
          </div>

          <div class="row no-margin">
            <div class="field">
              <%= f.label :email, class:"search-label" %>
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>

          <div class="row no-margin">
            <div class="field">
              <div class="small-text">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>
              <%= f.label :password, class:"search-label" %>
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>

          <div class="row no-margin">
            <div class="field no-margin">
              <%= f.label :password_confirmation, class:"search-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>
          <br />
          <div class="row no-margin center-align">
            <div class="actions waves-effect waves-light btn green darken-2">
              <%= f.submit "Sign up" %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
