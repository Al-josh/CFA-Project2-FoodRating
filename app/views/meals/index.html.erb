<div class="container">


<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Ingredients</th>
      <th>Vegetarian</th>
      <th>Vegan</th>
      <th>Cuisine</th>
      <th>Gluten free</th>
      <th>Takeaway</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.title %></td>
        <td><%= meal.ingredients %></td>
        <td><%= meal.vegetarian %></td>
        <td><%= meal.vegan %></td>
        <td><%= meal.cuisine %></td>
        <td><%= meal.gluten_free %></td>
        <td><%= meal.takeaway %></td>
        <td><%= meal.restaurant.name %></td>
        <td><%= link_to 'Show', meal_path %></td>
        <td><%= link_to 'Edit', edit_meal_path if restaurant.user == current_user || current_user.admin?%></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } if restaurant.user == current_user || current_user.admin?%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_meal_path %>

</div>
