<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Meals</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Ingredients</th>
        <th>Vegetarian</th>
        <th>Vegan</th>
        <th>Cuisine</th>
        <th>Gluten free</th>
        <th>Takeaway</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.title %></td>
        <td><%= meal.ingredients %></td>
        <td><%= meal.vegetarian %></td>
        <td><%= yes_no(meal.vegan) %></td>
        <td><%= meal.cuisine %></td>
        <td><%= yes_no(meal.gluten_free) %></td>
        <td><%= yes_no(meal.takeaway) %></td>
        <td><%= link_to 'Show', restaurant_meal_path(@restaurant, meal) %></td>
        <td><%= link_to 'Destroy', restaurant_meal_path(@restaurant, meal), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
